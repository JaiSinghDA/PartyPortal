@model PartyInvitationsPortal.Contracts.RegisterUser


@{
    Layout = null;
}



<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login As</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <script>
        function go() {
            alert("Registeration Successfull. Now,You'll be redirected to Login Page");
        }
    </script>

</head>
<body>
    <div class="container">
        <h1><b><center>Sign Up</center></b></h1>

        <br />
        <br />

        <form class="p-a-1" asp-action="Register" method="post">

            <div asp-validation-summary="All">

            </div>


            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <div class="form-group">
                        <label asp-for="Email">Email:</label>
                        <input class="form-control" asp-for="Email" />
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <div class="form-group">
                        <label asp-for="Name">Name:</label>
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>
            </div>

            <center>
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <button class="btn btn-primary" type="submit" onclick="go()">
                            Sign Up
                        </button>
                    </div>
                </div>
            </center>




        </form>
    </div>




</body>
</html>